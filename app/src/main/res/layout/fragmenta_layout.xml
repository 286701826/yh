<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/home_search_tv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/homemid_item4"
            android:gravity="center"
            android:text="电站搜索" />
        <TextView
            android:id="@+id/home_collect_tv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/homemid_item2"
            android:gravity="center"
            android:text="我的收藏" />

        <TextView
            android:id="@+id/home_newly_tv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/homemid_item1"
            android:gravity="center"
            android:text="最近充电" />

        <TextView
            android:id="@+id/home_position_tv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/homemid_item6"
            android:gravity="center"
            android:text="充电地图" />

        <TextView
            android:id="@+id/home_navigation_tv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/homemid_item8"
            android:gravity="center"
            android:text="一键导航" />
    </LinearLayout>
</RelativeLayout>